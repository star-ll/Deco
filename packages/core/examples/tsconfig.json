{
	"compilerOptions": {
		"target": "ESNext",
		"strict": true,
		"rootDir": "./",
		"baseUrl": "./",
		"outDir": "./dist",
		"moduleResolution": "Node",
		"jsx": "react",
		"jsxFactory": "DecoElement.h",
		"jsxFragmentFactory": "DecoElement.Fragment",
		"types": ["../dist/index.d.ts"],
		"paths": {
			"@deco/core": ["../dist/index.d.ts"]
		}
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "../jsx.d.ts"]
}
