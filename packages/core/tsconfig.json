{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"rootDir": "./",
		"baseUrl": "./",
		"outDir": "./dist",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"jsx": "react",
		"jsxFactory": "Deco.h",
		"jsxFragmentFactory": "Deco.Fragment"
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "index.ts", "./jsx.d.ts"]
}
