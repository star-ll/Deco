{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"rootDir": "./",
		"baseUrl": "./",
		"outDir": "./dist",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"jsx": "react",
		"jsxFactory": "DecoElement.h",
		"jsxFragmentFactory": "DecoElement.Fragment",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["./src/**/*.(ts|tsx)", "index.ts"]
}
